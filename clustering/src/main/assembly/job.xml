<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>job</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <outputDirectory>lib</outputDirectory>
      <excludes>
        <exclude>org.sleuthkit:sleuthkit-clustering</exclude>
        <exclude>org.apache.mahout:mahout-core</exclude>
        <exclude>org.apache.lucene:lucene-core</exclude>
	<exclude>org.apache.mahout.hbase:hbase:jar:0.20.0</exclude>
      </excludes>
    </dependencySet>
    <dependencySet>
      <unpack>true</unpack>
      <scope>runtime</scope>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>org.sleuthkit:sleuthkit-clustering</include>
        <include>org.apache.mahout:mahout-core</include>
        <include>org.apache.lucene:lucene-core</include>
      </includes>
      <unpackOptions>
        <excludes>
          <exclude>META-INF</exclude>
          <exclude>META-INF/**</exclude>
        </excludes>
      </unpackOptions>
    </dependencySet>
  </dependencySets>
</assembly>
